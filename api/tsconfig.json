{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "20.1.0",

  "compilerOptions": {
      "module": "CommonJS",
      "moduleResolution": "node",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "baseUrl": "./",
      "typeRoots": ["./node_modules/@types", "./src/types"],
      "paths": {
        "@/*": ["./src/*"]
      }
    },
    "include": [
      "src/**/*.ts",        
      "prisma/**/*.ts"   
    ],
  "exclude": [
    "node_modules"      
  ]
}